<div class="drac-box drac-text-white-secondary drac-mb-sm drac-rounded">
    <div class="drac-p-md">
        <h2 class="drac-text-purple">{{post.title}} by {{post.user.user_name}}</h2>
    </div>
    <div class="drac-p-sm">
        <p class="drac-text">{{post.body}}</p>
    </div>
</div>
<hr class="drac-divider" />
<div class="drac-box drac-text-white-secondary drac-mb-sm drac-rounded">
    <div class="drac-p-md">
        <h4 class="drac-text-purple">Comments:</h4>
        {{#each post.comments as |comment|}}
        <div class="drac-text-white-secondary drac-p-sm">
            {{comment.body}}
        </div>
        {{/each}}
    </div>
</div>