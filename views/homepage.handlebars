{{#each posts as |post| }}
    <div class="drac-box drac-text-white-secondary drac-mb-sm drac-rounded">
        <div class="drac-p-md">
            <h2 class="drac-text-purple"><a href="/post/{{post.id}}" class="drac-anchor drac-text-purple drac-text-pink--hover">{{post.title}}</a></h2>
        </div>
        <div class="drac-p-sm">
            <p class="drac-text">{{post.body}}</p>
        </div>
    </div>
    <hr class="drac-divider" />
{{/each}}